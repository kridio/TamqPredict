<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:text="現在位置"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/bg_white"
        android:textSize="28dp"
        android:id="@+id/tv_area"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/tv_area"
        android:id="@+id/im_area_bg" />
    <TextView
        android:id="@+id/tv_area_pm25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="80"
        android:textColor="@color/bg_white"
        android:textSize="40dp"
        android:layout_alignBottom="@+id/im_area_bg"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"/>
    <TextView
        android:id="@+id/tv_area_ug"
        android:text="ug/m"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="@color/bg_white"
        android:layout_alignBottom="@+id/im_area_bg"
        android:layout_toRightOf="@+id/tv_area_pm25"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"/>
    <TextView
        android:text="3"
        android:textSize="15dp"
        android:textColor="@color/bg_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/im_area_bg"
        android:layout_toRightOf="@+id/tv_area_ug"
        android:layout_marginBottom="15dp"/>
</RelativeLayout>