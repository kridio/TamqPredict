<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:gravity="bottom"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:alpha="0.5"
        android:background="@color/bottom_list"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_pm25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PM2.5"
            android:textColor="@color/text_color"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/iv_pm25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/tv_pm25"
            android:background="@drawable/ic_favorite_red_24dp" />

        <TextView
            android:id="@+id/tv_so2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/iv_pm25"
            android:text="SO2"
            android:textColor="@color/text_color"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/iv_so2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/tv_so2"
            android:background="@drawable/ic_favorite_red_24dp" />

        <TextView
            android:id="@+id/tv_co"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/iv_so2"
            android:text="CO"
            android:textColor="@color/text_color"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/iv_co"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/tv_co"
            android:background="@drawable/ic_favorite_red_24dp" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
